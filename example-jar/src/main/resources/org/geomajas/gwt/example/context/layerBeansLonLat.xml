<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="java.util.Date">
					<bean class="org.springframework.beans.propertyeditors.CustomDateEditor">
						<constructor-arg>
							<bean class="java.text.SimpleDateFormat">
								<constructor-arg value="yyyy-MM-dd" />
								<constructor-arg value="null" />
							</bean>
						</constructor-arg>
						<constructor-arg value="true" />
					</bean>
				</entry>
			</map>
		</property>
	</bean>

	<bean name="layerBeansLonLat" class="org.geomajas.layer.bean.BeanLayer">
		<property name="layerInfo" ref="layerBeansLonLatInfo" />
		<property name="features">
			<list>
				<bean class="org.geomajas.layer.bean.FeatureBean">
					<property name="id" value="10" />
					<property name="geometry" value="MULTIPOLYGON(((0 0, 0 20, 20 20, 20 0, 0 0)))" />
				</bean>
				<bean class="org.geomajas.layer.bean.FeatureBean">
					<property name="id" value="11" />
					<property name="geometry" value="MULTIPOLYGON(((31 11,
						                                            39 11,
						                                            39 39,
						                                            31 39,
						                                            31 11)))" />
				</bean>
				<bean class="org.geomajas.layer.bean.FeatureBean">
					<property name="id" value="12" />
					<property name="geometry" value="MULTIPOLYGON(((-15 30,
						                                            20 30,
						                                            20 40,
						                                            -15 40,
						                                            -15 30)))" />
				</bean>

			</list>
		</property>
	</bean>

	<bean name="layerBeansLonLatInfo" class="org.geomajas.configuration.VectorLayerInfo">
		<property name="layerType" value="MULTIPOLYGON" />
		<property name="crs" value="EPSG:4326" />
		<property name="maxExtent">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-179.9" />
				<property name="y" value="-85.0" />
				<property name="width" value="359.8" />
				<property name="height" value="170.0" />
			</bean>
		</property>
		<property name="featureInfo" ref="layerBeansFeatureInfo" />
		<property name="namedStyleInfos">
			<list>
				<ref bean="layerBeansLonLatStyleInfo" />
			</list>
		</property>
	</bean>

	<bean class="org.geomajas.configuration.NamedStyleInfo" id="layerBeansLonLatStyleInfo">
		<property name="featureStyles">
			<list>
				<bean class="org.geomajas.configuration.FeatureStyleInfo">
					<property name="name" value="default" />
					<property name="fillColor" value="#00FF00" />
					<property name="fillOpacity" value=".6" />
					<property name="strokeColor" value="#00FF00" />
					<property name="strokeOpacity" value=".3" />
					<property name="strokeWidth" value="1" />
				</bean>
			</list>
		</property>
		<property name="labelStyle">
			<bean class="org.geomajas.configuration.LabelStyleInfo">
				<property name="labelAttributeName" value="stringAttr" />
				<property name="fontStyle">
					<bean class="org.geomajas.configuration.FontStyleInfo">
						<property name="color" value="#998811" />
						<property name="opacity" value="1" />
					</bean>
				</property>
				<property name="backgroundStyle">
					<bean class="org.geomajas.configuration.FeatureStyleInfo">
						<property name="fillColor" value="#000000" />
						<property name="fillOpacity" value=".7" />
						<property name="strokeColor" value="#998811" />
						<property name="strokeOpacity" value="1" />
						<property name="strokeWidth" value="1" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

</beans>
