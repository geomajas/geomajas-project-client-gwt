					<property name="label" value="Synthetic attribute"/>
					<property name="name" value="syntheticAttr"/>
					<property name="identifying" value="true"/>
					<property name="expression" value="stringAttr + ' ' + urlAttr"/>
				</bean>
			</list>
		</property>
	</bean>



