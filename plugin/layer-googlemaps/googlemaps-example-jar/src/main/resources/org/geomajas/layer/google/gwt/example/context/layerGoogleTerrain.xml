<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean name="layerGoogleTerrain" class="org.geomajas.layer.google.GoogleLayer" >
		<property name="layerInfo" ref="layerGoogleTerrainInfo" />
		<property name="physical" value="true"/>
		<property name="maxZoomLevel" value="15" />
	</bean>

	<bean name="layerGoogleTerrainInfo" class="org.geomajas.configuration.RasterLayerInfo">
		<property name="crs" value="EPSG:900913"/>
		<property name="maxExtent">
			<bean class="org.geomajas.geometry.Bbox">
				<property name="x" value="-20026376.393709917"/>
				<property name="y" value="-20026376.393709917"/>
				<property name="width" value="40052752.787419834"/>
				<property name="height" value="40052752.787419834"/>
			</bean>
		</property>
        <property name="tileWidth" value="256"/>
        <property name="tileHeight" value="256"/>
 	</bean>

</beans>
